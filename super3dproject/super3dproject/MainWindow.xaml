<Window x:Class="super3dproject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"   
    WindowStartupLocation="CenterScreen" WindowState="Maximized" Loaded="WindowLoaded" KeyUp="KeyUpEvent" KeyDown="KeyDownEvent">
    <Grid Name="Screen">
        <Button Content="Может капот?" Click="HoodClick" Panel.ZIndex="1000" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBlock Name="FpsBlock" Canvas.Left="700" Panel.ZIndex="1000" TextWrapping="Wrap" Text="TextBlock" Canvas.Top="10" HorizontalAlignment="Right"  VerticalAlignment="Top" Margin="0,10,10,0"/>
        <Button Content="тонистарк" Click="hideIronClick" Panel.ZIndex="1000" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="100"/>
        <Button Content="машинган" Click="hideCarClick" Panel.ZIndex="1000" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="100"/>

        <Canvas Background="#fefefe" MouseMove="Image_MouseMove" MouseWheel="Image_MouseWheel" Name="Image"  Margin="0,0,0,0">
         </Canvas>

    </Grid>
</Window>
